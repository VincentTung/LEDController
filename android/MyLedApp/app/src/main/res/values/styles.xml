<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:textColor">@color/titleTextColor</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="BlueButtonStyle">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/button_white</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/button_tx_size</item>
    </style>

    <style name="ActionTextStyle">
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="background">@drawable/edittext_border</item>

    </style>

    <style name="DrawToolImageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>

    </style>

    <!-- SeekBar样式 -->
    <style name="CustomSeekBarStyle">
        <item name="android:thumb">@drawable/seekbar_thumb</item>
        <item name="android:progressDrawable">@drawable/seekbar_progress</item>
        <item name="android:splitTrack">false</item>
        <item name="android:thumbOffset">0dp</item>
    </style>

</resources>
