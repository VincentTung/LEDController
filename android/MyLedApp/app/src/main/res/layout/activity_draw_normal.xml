<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_medium"
    tools:context=".ui.DrawNormalActivity">

    <include layout="@layout/incl_title" />
    <include
        layout="@layout/incl_divider_block"
        android:paddingLeft="@dimen/margin_medium"
        android:paddingRight="@dimen/margin_medium" />
    <Switch
        android:id="@+id/sw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="实时更新"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="@dimen/margin_large"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_drag"
            style="@style/DrawToolImageStyle"
            android:src="@mipmap/drag_disable" />

        <ImageView

            android:id="@+id/btn_fill"
            style="@style/DrawToolImageStyle"
            android:src="@mipmap/fill_disable" />

        <ImageView

            android:id="@+id/btn_all_black"
            style="@style/DrawToolImageStyle"
            android:src="@mipmap/black" />

        <ImageView

            android:id="@+id/btn_all_white"
            style="@style/DrawToolImageStyle"
            android:src="@mipmap/white" />
    </LinearLayout>


    <com.vincent.android.myled.view.PixelView
        android:id="@+id/pv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btn_update"
        style="@style/BlueButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="更新到LED" />
</LinearLayout>