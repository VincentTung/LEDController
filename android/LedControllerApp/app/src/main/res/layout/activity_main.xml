<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_large"
            tools:context=".ui.MainActivity">

            <include
                layout="@layout/incl_title"
                android:paddingLeft="@dimen/margin_medium"
                android:paddingRight="@dimen/margin_medium" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                android:background="@drawable/bg_item"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/margin_medium">

                <TextView
                    android:id="@+id/tv_device_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="10dp"
                    app:drawableLeftCompat="@drawable/ic_grey_circle"
                    android:drawablePadding="4dp"
                    android:text="设备名称"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/tv_device_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_device_name"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:text="mac"
                    android:textColor="@color/dark_grey"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_device_resolution"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_device_address"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="6dp"
                    android:text="分辨率:"
                    android:visibility="visible"
                    android:textColor="@color/dark_grey"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/btn_reconnect"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/bg_reconnect" />

                <Button
                    android:id="@+id/btn_phy_info"
                    style="@style/BlueButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_reconnect"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp"
                    android:text="PHY信息"
                    android:visibility="gone" />

            </RelativeLayout>

            <include layout="@layout/incl_divider_block" />


            <include
                layout="@layout/incl_divider_block"
                android:paddingLeft="@dimen/margin_medium"
                android:paddingRight="@dimen/margin_medium" />

            <LinearLayout
                android:id="@+id/ll_function"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_small"
                android:orientation="vertical">

                <!-- 第一行：4个按钮 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btn_draw_text"
                        android:layout_width="0dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        android:padding="@dimen/margin_small"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_text" />

                    <ImageView
                        android:id="@+id/btn_draw_image"
                        android:layout_width="0dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        android:padding="@dimen/margin_small"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_local" />

                    <ImageView
                        android:id="@+id/btn_draw_gif"
                        android:layout_width="0dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        android:padding="@dimen/margin_small"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_material" />

                    <ImageView
                        android:id="@+id/btn_draw_normal"
                        android:layout_width="0dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        android:padding="@dimen/margin_small"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_graff" />
                </LinearLayout>

                <!-- 第二行：3个按钮 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btn_clock"
                        android:layout_width="0dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        android:padding="@dimen/margin_small"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_clock" />

                    <ImageView
                        android:id="@+id/btn_game"
                        android:layout_width="0dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        android:padding="@dimen/margin_small"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_game" />

                    <ImageView
                        android:id="@+id/btn_setting"
                        android:layout_width="0dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        android:padding="@dimen/margin_small"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_setting" />

                    <!-- 空白占位，保持4列布局 -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_brightness"

        android:padding="@dimen/margin_medium">

        <TextView
            android:id="@+id/tv_brightness_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:drawableLeftCompat="@drawable/ic_brightness"
            android:drawablePadding="4dp"
            android:text="@string/brightness"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_brightness_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawablePadding="4dp"
            android:text="10%"
            android:textColor="@android:color/black" />

        <SeekBar
            android:id="@+id/sb_brightness"
            style="@style/CustomSeekBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_brightness_tip"
            android:layout_centerInParent="true"
            android:max="100"
            android:min="2"
            android:progress="20" />


        <TextView
            android:id="@+id/tv_brightness_tip_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sb_brightness"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:drawablePadding="4dp"
            android:text="暗"
            android:textColor="#4B5563"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_brightness_tip_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sb_brightness"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:drawablePadding="4dp"
            android:text="亮"
            android:textColor="#4B5563"
            android:textSize="12sp" />
    </RelativeLayout>
</FrameLayout>