<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_large"
    tools:context=".ui.TextActivity">

    <include
        layout="@layout/incl_title"
        android:paddingLeft="@dimen/margin_medium"
        android:paddingRight="@dimen/margin_medium" />

    <include
        layout="@layout/incl_divider_block"
        android:paddingLeft="@dimen/margin_medium"
        android:paddingRight="@dimen/margin_medium" />

    <!-- 静态文本区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginBottom="@dimen/margin_large"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_medium"
        android:paddingRight="@dimen/margin_medium">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/bg_input"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="4dp">

            <EditText
                android:id="@+id/et_static_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="@string/hint_static_text"
                android:padding="8dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textCursorDrawable="@drawable/cursor_black"
                android:textSize="@dimen/button_tx_size" />

            <ImageView
                android:id="@+id/btn_send_static_text"
                android:layout_width="60dp"
                android:layout_height="42dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_text_send"

                />
        </LinearLayout>
        <include
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            layout="@layout/incl_divider_line" />
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_medium"
            android:paddingRight="@dimen/margin_medium">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="文字滚动"
                android:textColor="@color/black" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_scroll"
                style="@style/CustomSwitchStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:checked="false" />
        </RelativeLayout>
        <include
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            layout="@layout/incl_divider_line" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="@dimen/margin_small"
            android:paddingLeft="@dimen/margin_medium"
            android:paddingRight="@dimen/margin_medium">

            <TextView
                android:id="@+id/tv_static_textsize_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:drawablePadding="4dp"
                android:text="@string/static_text_size"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tv_static_textsize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawablePadding="4dp"
                android:text="极小"
                android:textColor="@android:color/black" />

            <SeekBar
                android:id="@+id/sb_static_textsize"
                style="@style/CustomSeekBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_static_textsize_tip"
                android:layout_centerInParent="true"
                android:max="4"
                android:min="1"
                android:progress="1" />
        </RelativeLayout>
        <include
            layout="@layout/incl_divider_line" />

        <RelativeLayout
            android:id="@+id/rl_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            android:paddingLeft="@dimen/margin_medium"
            android:paddingRight="@dimen/margin_medium"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_scroll_text_speed_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:drawablePadding="4dp"
                android:text="@string/scroll_speed"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tv_scroll_text_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawablePadding="4dp"
                android:text="慢"
                android:textColor="@android:color/black" />

            <SeekBar
                android:id="@+id/sb_scroll_text_speed"
                style="@style/CustomSeekBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_scroll_text_speed_tip"
                android:layout_centerInParent="true"
                android:max="3"
                android:min="1"
                android:progress="1" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
