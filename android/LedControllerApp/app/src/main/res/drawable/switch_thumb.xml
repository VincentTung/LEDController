<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 阴影效果 -->
    <item android:top="1dp" android:left="1dp">
        <shape android:shape="oval">
            <solid android:color="@color/switch_thumb_shadow" />
            <size android:width="22dp" android:height="22dp" />
        </shape>
    </item>
    
    <!-- 主滑块 -->
    <item android:top="0dp" android:left="0dp">
        <shape android:shape="oval">
            <solid android:color="@color/switch_thumb" />
            <stroke android:width="1dp" android:color="@color/dark_grey" />
            <size android:width="22dp" android:height="22dp" />
        </shape>
    </item>
</layer-list>
